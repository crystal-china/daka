<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>打卡记录</title>
  </head>
  <body>
    <table>
      <tr>
        <th>主机名</th>
        <th>动作</th>
        <th>时间</th>
      </tr>
      <% dates.each do |date| %>
        <tr>
          <th colspan="3" style="text-align: center;"><%= date[0] %></th>
        </tr>
        <% date[1].each do |record| %>
          <tr>
            <td><%= record[0] %></td>
            <td><%= record[1] %></td>
            <td><%= record[2].to_s("%H:%M:%S") %></td>
          </tr>
          <% if record[1] == "offline" %>
            <tr style="background: #aaa;">
              <td colspan="3"></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </table>
  </body>
</html>
